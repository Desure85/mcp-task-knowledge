{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://desure85.github.io/mcp-task-knowledge/schemas/feedback.event.schema.json",
  "title": "Passive Feedback Event (JSONL row)",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "promptId": { "type": "string" },
    "id": { "type": "string" },
    "version": { "type": "string" },
    "promptVersion": { "type": "string" },
    "variant": { "type": ["string", "null"] },
    "arm": { "type": ["string", "null"] },
    "abVariant": { "type": ["string", "null"] },
    "userId": { "type": ["string", "null"] },
    "requestId": { "type": ["string", "null"] },
    "ts": { "type": ["string", "null"], "format": "date-time" },
    "userMessage": { "type": ["string", "null"] },
    "modelOutput": { "type": ["string", "null"] },
    "userEdits": { "type": ["string", "null"] },
    "signals": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "thumb": { "type": ["string", "null"], "enum": ["up", "down", null] },
        "copied": { "type": ["boolean", "null"] },
        "abandoned": { "type": ["boolean", "null"] }
      }
    }
  }
}
